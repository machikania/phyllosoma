  cursor 0,5
  print "Select by Up/Down key"
  print "and hit Fire key";
  cursor 0,10
  print "    Ambulance"
  print "    UFO"
  print "    Random"
  s=gosub(CHOICE)
  cls
  if s=0 then sound AMB
  if s=1 then sound UFO
  if s=2 then sound RAND
loop

REM Select routine
label CHOICE
do
  do:loop while keys()
  cursor 2,10+s
  print ">";
  wait 2
  do
    k=keys()
  loop until k
  wait 2
  cursor 2,10+s
  print " ";
  if k=16 OR k=32 then return s
  if k=1 then s=s-1
  if k=2 then s=s+1
  if s<0 then s=0
  if s=n then s=n-1
loop

