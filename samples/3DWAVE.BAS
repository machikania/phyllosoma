REM 3D SINE WAVE
USEGRAPHIC 9:A#=15:U=192:W=150:D=2:E=5:P#=25
DIM M#(U*2):FOR I=0 TO U*2:M#(I)=1000:NEXT
K#=PI#*2/50:S#=SIN#(P#*PI#/180):T#=COS#(P#*PI#/180)
FOR Z=-W TO W STEP E
 FOR X=-U TO U STEP D
  R#=SQRT#(FLOAT#(X*X+Z*Z))
  Y#=A#*SIN#(K#*R#)
  Y#=-FLOAT#(Z)*S#+Y#*T#+110
  IF X>-U THEN
   IF Y#<M#(X+U) AND B#<=M#(X+U-D) THEN
    LINE X+192,INT(Y#),X+192-D,INT(B#),4
   ENDIF
  ENDIF
  IF Y#<M#(X+U) THEN M#(X+U)=Y#
  B#=Y#
 NEXT
NEXT
WHILE INKEY()=0:WEND
